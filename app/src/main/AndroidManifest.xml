<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- AsegÃºrate de tener el permiso de Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DSA_Android"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.event.ViewEventUsersActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.auth.RegisterActivity" />
        <activity android:name=".ui.auth.LoginActivity" />
        <activity android:name=".ui.shop.ShopActivity" />
        <activity android:name=".ui.main.PortalPageActivity" />
        <activity android:name=".ui.ranking.ViewRankingActivity" />
        <activity android:name=".ui.profile.ViewProfileActivity" />
        <activity android:name=".ui.inventario.InventarioActivity" />
    </application>

</manifest>